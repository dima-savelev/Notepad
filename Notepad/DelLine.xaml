<Window x:Class="Notepad.DelLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="Удаление строки по номеру" Height="161" Width="247" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="numberText" HorizontalAlignment="Left" Margin="66,41,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" PreviewTextInput="numberText_PreviewTextInput" Height="38" TextAlignment="Center" FontSize="15"/>
        <Label Content="Номер строки" HorizontalAlignment="Left" Margin="48,4,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="66,84,0,0" VerticalAlignment="Top" Click="DelLine_Click" Width="104"/>

    </Grid>
</Window>
